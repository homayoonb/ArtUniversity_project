@using ArtUnivercity.Domain.FieldOfStudyAndOrientationDomain
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model ArtUnivercity.Application.Contract.FieldOfStudyAndOrientation.EditFieldOfStudyAndOrientation
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش رشته تحصیلی با نام : @Model.Name</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="Name" onchange="makeSlug('Name', 'Slug')">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaghtaeReshtehTahsili">مقطع تحصیلی</label>
                    <select class="form-control" asp-for="MaghtaeReshtehTahsili" asp-items='Html.GetEnumSelectList<MaghtaeReshtehTahsili>()'>
                        <option>
                            مقطع تحصیلی را انتخاب کنید
                        </option>
                    </select>
                    <span asp-validation-for="MaghtaeReshtehTahsili" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gerayesh" class="control-label">گرایش</label>
                    <input type="text" class="form-control" asp-for="Gerayesh">
                    <span asp-validation-for="Gerayesh" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Slug" class="control-label">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="Slug">
                    <span asp-validation-for="Slug" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="KeyWord" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="KeyWord">
                    <span asp-validation-for="KeyWord" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="MetaDescription" class="control-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" asp-for="MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="MetaDescription" class="error"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>