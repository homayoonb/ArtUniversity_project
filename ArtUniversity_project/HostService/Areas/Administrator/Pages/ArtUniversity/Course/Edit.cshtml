@model ArtUnivercity.Application.Contract.Course.EditCourse
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش درس با نام @Model.CourseName</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CourseName" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="CourseName" onchange="makeSlug('CourseName', 'Slug')">
                    <span asp-validation-for="CourseName" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Count" class="control-label">تعداد واحد</label>
                    <input type="number" class="form-control" asp-for="Count" />
                    <span asp-validation-for="Count" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FieldOfStudyAndOrientationId">رشته تحصیلی</label>
                    <select class="form-control" asp-for="FieldOfStudyAndOrientationId" asp-items='new SelectList(Model.FieldOfStudyAndOrientations,"Id","Gerayesh")'>
                        <option>
                            رشته تحصیلی را انتخاب کنید
                        </option>
                    </select>
                    <span asp-validation-for="FieldOfStudyAndOrientationId" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Slug" class="control-label">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="Slug">
                    <span asp-validation-for="Slug" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="KeyWord" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="KeyWord">
                    <span asp-validation-for="KeyWord" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="MetaDescription" class="control-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" asp-for="MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="MetaDescription" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>
