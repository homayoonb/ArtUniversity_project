@page
@model HostService.Areas.Administrator.Pages.ArtUniversity.GroupStudy.IndexModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "مدیریت گروه های درسی";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index","Create")">ایجاد گروه درسی جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو گروه درسی</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.GroupStudyName"></label>
                        <input class="form-control" asp-for="SearchModel.GroupStudyName" placeholder="نام گروه درسی">
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="DepartmentDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست  گروه درسی: @Model.GroupStudies.Count()</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام گروه</th>
                                    <th>نام استاد</th>
                                    <th>نام درس</th>
                                    <th>ترم</th>
                                    <th>سال</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ تولید</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GroupStudies)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.GroupName</td>
                                        <td>@item.ProfessorName</td>
                                        <td>@item.CourseName</td>
                                        <td>@item.Term</td>
                                        <td>@item.Year</td>
                                        <td>
                                            @if (item.IsDeleted)
                                            {
                                                <i class="fa fa-remove fa-3x text-danger"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-check fa-3x text-success"></i>
                                            }
                                        </td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            <a class="btn btn-warning btn-custom waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                            @if (item.IsDeleted)
                                            {
                                                <a asp-page="./Index" asp-page-handler="Restored" class="btn btn-success btn-custom waves-effect waves-light m-b-5" asp-route-id="@item.Id">Restored</a>
                                            }
                                            else
                                            {
                                                <a asp-page="./Index" asp-page-handler="Removed" class="btn btn-danger btn-custom waves-effect waves-light m-b-5" asp-route-id="@item.Id"><i class="fa fa-trash-o"></i>Delete</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}