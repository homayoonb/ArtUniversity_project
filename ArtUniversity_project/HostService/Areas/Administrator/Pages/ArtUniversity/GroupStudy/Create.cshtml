@model ArtUnivercity.Application.Contract.GroupStudy.CreateGroupStudy
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد گروه درسی جدید</h4>
</div>
<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="GroupName" class="control-label">نام گروه درسی</label>
                    <input type="text" class="form-control" asp-for="GroupName" onchange="makeSlug('GroupName', 'Slug')">
                    <span asp-validation-for="GroupName" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfessorId">نام استاد</label>
                    <select class="form-control" asp-for="ProfessorId" asp-items='new SelectList(Model.Professors,"Id","ProfessorName")'>
                        <option value="0">
                            استاد را انتخاب کنید
                        </option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="CourseId">نام درس</label>
                    <select class="form-control" asp-for="CourseId" asp-items='new SelectList(Model.Courses,"Id","CourseName")'>
                        <option value="0">
                             درس را انتخاب کنید
                        </option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Term">ترم</label>
                    <input class="form-control" asp-for="Term" />
                    <span asp-validation-for="Term" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year">سال</label>
                    <input class="form-control" asp-for="Year" />
                    <span asp-validation-for="Year" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Slug" class="control-label">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="Slug">
                    <span asp-validation-for="Slug" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="KeyWord" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="KeyWord">
                    <span asp-validation-for="KeyWord" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="MetaDescription" class="control-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" asp-for="MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="MetaDescription" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>
